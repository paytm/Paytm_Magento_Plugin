<?xml version="1.0"?>

<config>
   <sections>
        <payment>
            <groups>
                <paytm_cc translate="label" module="paytm">
                    <label>Paytm PG</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <comment>
                        <![CDATA[
                            <a href="https://developer.paytm.com/docs/eCommerce-plugin/magento#v1-x" target="_blank">Developer Docs</a>
                            <br>
                            <span id="phpCurlVersion" style="margin-bottom: 0;"></span> | 
                            <span id="magentoVersion" style="margin-bottom: 0;"></span> | 
                            <span id="paytmPluginVersion" style="margin-bottom: 0;"></span> | 
                            <span id="paytmLastUpdate"></span>
                        ]]>
                    </comment>
                    <fields>
                        <active translate="label">
                            <label>Enable Plugin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </title>
                        <transaction_environment translate="label">
                            <label>Transaction Environment</label>
                            <frontend_type>select</frontend_type>
                            <source_model>paytm/config_backend_transactionenv</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transaction_environment>
                        <inst_id translate="label">
                            <label>Merchant ID</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>paytm/config_backend_instid</backend_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </inst_id>
                        <inst_key translate="label">
                            <label>Merchant Key</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>paytm/config_backend_instid</backend_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </inst_key>
                        <website translate="label">
                            <label>Website Name</label>
                            <frontend_type>text</frontend_type>
                            <!-- <validate>required-entry</validate> -->
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </website>
                        <industrytype translate="label">
                            <label>Industry Type (Retail,Entertainment etc.)</label>
                            <frontend_type>text</frontend_type>
                            <!-- <validate>required-entry</validate> -->
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </industrytype>
                        <success_transaction_status translate="label">
                            <label>Success Transaction Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </success_transaction_status>
                        <cancel_transaction_status translate="label">
                            <label>Fail Transaction Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cancel_transaction_status>
                    </fields>
                </paytm_cc>
            </groups>
        </payment>
    </sections>
    
</config>